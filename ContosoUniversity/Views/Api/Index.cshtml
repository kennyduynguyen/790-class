@{
    ViewBag.Title = "Browse Our Products";
}


<h2>@ViewBag.Title</h2>
<form action="/Api/Index" method="post">
    <div class="form-group">
        <label for="searchItem">Search Item</label>
        <input type="text" class="form-control" id="searchItem" placeholder="Browse our large inventory here" name="searchString">
    </div>
    <div class="form-group">
        <label for="fetchNumber">Number of Items</label>
        <input type="text" class="form-control" id="fetchNumber" placeholder="Number of items to fetch" name="fetchNumber">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>